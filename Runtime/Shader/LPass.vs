//--------------------------------------------------------------------------------------
// Constant Buffer Variables
//--------------------------------------------------------------------------------------
cbuffer CB_Model : register( b0 )
{
	matrix m_WV;
	matrix m_WVP;
};


//--------------------------------------------------------------------------------------
// IO structures
//--------------------------------------------------------------------------------------
struct VS_INPUT
{
    float4 Pos : POSITION;
};

struct PS_INPUT
{
	float4 Pos		: SV_POSITION;
	float3 ViewPos	: TEXCOORD0;
};

//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
PS_INPUT VS( VS_INPUT In)
{	
	PS_INPUT OUT = (PS_INPUT)0;
	
	OUT.Pos = mul( In.Pos, m_WVP );
	OUT.ViewPos = mul( In.Pos, m_WV );
		
	return OUT;
}
