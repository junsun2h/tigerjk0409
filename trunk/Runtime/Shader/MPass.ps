//--------------------------------------------------------------------------------------
float4 PS_COLOR( PSIN_4P4C In) : SV_Target
{
    return In.Color;
}

float4 PS_FONT( PSIN_4P4C2T In) : SV_Target
{
    return txDiffuse.Sample( samAF16, In.Tex ) * In.Color;
}